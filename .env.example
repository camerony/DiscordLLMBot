# Discord bot token (required)
DISCORD_TOKEN=your_bot_token_here

# LLM API endpoint (OpenAI-compatible)
LLM_URL=http://llm.home.cameron.in:8080/v1/chat/completions

# Model name to use
LLM_MODEL=mlx-community/Qwen3-30B-A3B-4bit

# Manual channel pairs (optional, format: id1:id2,id3:id4)
# Overrides auto-detection for specific channels
CHANNEL_PAIRS=

# Enable debug logging (optional, default: false)
DEBUG_MODE=false

# RAG Configuration (optional)
RAG_ENABLED=false
RAG_DATA_DIR=/data
RAG_EXTRACTION_ENABLED=true
RAG_CONFIDENCE_THRESHOLD=0.7
RAG_MAX_CONTEXT_FACTS=5
RAG_KEYWORD_MATCH_THRESHOLD=0.3

# Designated RAG Channel (optional)
RAG_CHANNEL_ENABLED=true
RAG_CHANNEL_PATTERN=knowledge|facts|rag|info
RAG_VERIFIED_BOOST=1.5
